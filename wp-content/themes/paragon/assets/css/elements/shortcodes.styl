/*------------------------------------------------------------------
Alert Message
-------------------------------------------------------------------*/

.vl-alert,
.woocommerce-error, 
.woocommerce-info, 
.woocommerce-message
	position relative
	padding 20px 30px
	margin 0 0 30px !important
	border-width 2px
	border-style solid
	border-radius(0)
	&:last-child
		margin-bottom 0
	&::before
		top auto
		color rgba($white, .4)
	a:hover
		color inherit

.woocommerce-error, 
.woocommerce-info, 
.woocommerce-message
	padding 20px 30px 20px 60px !important
	
.woocommerce-message::before
	color rgba($black, .4)

.vl-alert.vl-alert-classic,
.woocommerce-message
	background-color $lgray
	border 2px solid $lgray

.vl-alert.vl-alert-danger,
.woocommerce-error
	background-color #f03741
	border-color #f03741
	color $white

.vl-alert.vl-alert-success
	background-color #52cd75
	border-color #52cd75
	color $white
	
.vl-alert.vl-alert-warning
	background-color #fccc22
	border-color #fccc22
	color $white

.vl-alert.vl-alert-info,
.woocommerce-info
	background-color #8cc3f7
	border-color #8cc3f7
	color $white

.vl-alert-dismissible
	padding-right 55px

.vl-alert-close
	position absolute
	top 10px
	right 10px
	height 30px
	width 30px
	text-align center
	cursor pointer
	line-height 30px
	font-size 18px
	&:hover
		color inherit


/*------------------------------------------------------------------
Services
-------------------------------------------------------------------*/

.vl-services
	display block
	position relative
	
	.vl-services--title,
	.vl-services--description
		margin 0
	
	.vl-services--content
		padding 0


.vl-services.vl-services-01 .vl-services--icon
	margin-top 5px

.vl-services.vl-icon-position-left
	
	.vl-services--icon
		float left
		
	.vl-services--content
		padding-left 50px
		
.vl-services.vl-icon-position-right
	
	.vl-services--icon
		float right
		
	.vl-services--content
		padding-right 50px
		text-align right


.vl-services.hover-effect
	border 1px solid $lgray
	transition(all 200ms linear)
	box-shadow(0 0 0 rgba($black, 10%))
	&:hover
		box-shadow(0 10px 20px rgba($black, 10%))
		transform(translateY(-6px))

			
@media (max-width: 767px)
	.vl-services
		margin-bottom 30px !important


/*------------------------------------------------------------------
Circle Progress Bar
-------------------------------------------------------------------*/


.vl-circle-progress-bar
	position relative
	text-align center
	
	canvas,
	.vl-circle-progress-bar--circle
		display block
		margin 0 auto
		
	.vl-circle-progress-bar--circle
		position absolute
		top 0
		left 0
		width 100%
		span
			position absolute
			top 50%
			left 50%
			width 70px
			height 70px
			line-height 70px
			margin-top -35px
			margin-left -35px
			text-align center
			color $white
			font-size 18px
			border-radius 50%
			&::after
				content '%'

	.vl-circle-progress-bar--title
		font-weight normal
		position relative
		margin-top 15px
		margin-bottom 0
		display block

/*------------------------------------------------------------------
Progress Bar
-------------------------------------------------------------------*/

.vl-progress-bar
	position relative
	overflow hidden
	.vl-progress-bar--title
		font-weight normal
		position relative
		margin-bottom 5px
		display block
		
	.vl-progress-bar--percent
		position absolute
		top 0
		left 0
		height 100%
		text-align right
		min-width 30%
		&::after
			content '%'
			
	.vl-progress-bar--text
		z-index 3
		position relative

.vl-progress-bar--outer
	width 100%
	position relative
	overflow hidden
	border-radius 10px
	.vl-progress-bar--inner
		position absolute
		top 0
		left 0
		height 100%
		width 0
		box-shadow(inset 0 -2px 0 rgba($black, 0.08))

@media (max-width: 767px)
	.vl-progress-bars
		margin-bottom 30px !important

/*------------------------------------------------------------------
Pricing Table
-------------------------------------------------------------------*/


.vl-pricing-table
	position relative
	text-align center
	padding 0 0 30px
	border 2px solid darken($lgray, 3%)
	
	.vl-price-header
		padding 30px 0 10px
		
		.vl-price-icon
			font-size 36px
			display block
			padding 10px 0 0
			
		.vl-price-name
			display block
			padding 15px 0
			margin-bottom 0
			
		.vl-price
			font-size 44px
			display block
		
		.vl-period
			margin-top 10px
			font-size 14px
			text-transform lowercase
		
	.vl-price-body
		padding 10px 0 30px
		line-height 2rem
		
		strong
			font-weight 700

	
	.featured-flag
		position absolute
		top 10px
		right 10px
		height 26px
		width 26px
		text-align center
		line-height 26px
		font-size 22px

@media (max-width: 767px)
	.vl-pricing-table
		margin-bottom 30px !important
	
