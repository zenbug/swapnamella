/*!------------------------------------------------------------------
07. Shortcodes
-------------------------------------------------------------------*/

/*------------------------------------------------------------------
Buttons
-------------------------------------------------------------------*/

vlbtn()
	display inline-block
	position relative
	cursor pointer
	border none
	outline 0
	overflow hidden
	color inherit
	text-align center
	background-color transparent
	padding 12px 15px
	user-select(none)
	border-radius(0)
	transition(all 200ms linear)
	
vlbtnprimary()
	color $white
	background-color $lblack
	&:not(.disabled):not(:disabled):hover
		color $white

vlbtnsecondary()
	color $white
	&:not(.disabled):not(:disabled):hover
		color $white
		background-color $lblack

.vl-btn
	vlbtn()
	i
		vertical-align bottom
		display inline-block
		padding-left 4px

.vl-btn + .vl-btn
	margin-left 4px

.disabled,
.vl-btn:disabled
	cursor not-allowed

.vl-btn--block
	display block
	width 100%
	
.vl-btn--primary
	vlbtnprimary()
		
.vl-btn--secondary
	vlbtnsecondary()

.vl-icon-animate-left:hover i
	animation(animateIconLeft 200ms linear forwards)
		
.vl-icon-animate-right:hover i
	animation(animateIconRight 200ms linear forwards)
		
.vl-icon-animate-top:hover i
	animation(animateIconTop 200ms linear forwards)
		
.vl-icon-animate-bottom:hover i
	animation(animateIconBottom 200ms linear forwards)

@keyframes animateIconTop
	49%
		transform(translateY(-100%))
	50%
		opacity 0
		transform(translateY(100%))
	51%
		opacity 1

@keyframes animateIconBottom
	49%
		transform(translateY(100%))
	50%
		opacity 0
		transform(translateY(-100%))
	51%
		opacity 1

@keyframes animateIconLeft
	49%
		transform(translateX(-100%))
	50%
		opacity 0
		transform(translateX(100%))
	51%
		opacity 1
		
@keyframes animateIconRight
	49%
		transform(translateX(100%))
	50%
		opacity 0
		transform(translateX(-100%))
	51%
		opacity 1

