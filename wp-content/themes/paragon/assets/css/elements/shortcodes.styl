/*------------------------------------------------------------------
Video Lightbox
-------------------------------------------------------------------*/
 
.vl-video-lightbox
	position relative

.vl-video-lightbox--overlay
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index 1
	background-color rgba($black, 40%)
	
.vl-video-lightbox--link
	display inline-block
	position absolute
	top 50%
	left 50%
	height 60px
	width 60px
	line-height 63px
	border-radius 50%
	padding-left 5px
	text-align center
	font-size 28px
	color $white
	z-index 2
	box-shadow(0 0 0 rgba($white, 0.4))
	transform(translate3d(-50%, -50%, 0))
	animation(pulsing 2s infinite)
	&:hover
		color $white
		animation(none)


@keyframes pulsing
	0%
		box-shadow(0 0 0 0 rgba($white, 0.4))
	70%
		box-shadow(0 0 0 30px rgba($white, 0))
	100%
		box-shadow(0 0 0 0 rgba($white, 0))


@media (max-width: 767px)
	.vl-video-lightbox
		margin-bottom 30px !important
		

